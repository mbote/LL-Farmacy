@model dynamic;

@{
    ViewData["Title"] = "Create";
    var id = ViewBag.funcionarios[0].idServicoFuncionario;
}

<div class="container" id="linkGen" style="margin-bottom:20px; margin-top:70px;">
    <p style="color:#212529; font-size: 20px;"><a asp-action="Index" style="text-decoration: none;color:#212529">Serviço
            funcionário/</a>editar</p>
</div>

<div class="container pt-3 pb-2" id="headCliente" style="box-shadow: 1px 5px 15px #888888; margin-top:0px">
    <h5>Editar serviço funcionário</h5>
    <hr />
    <form method="post" action="Edit">
        <div class="row">
            <div class="col-md-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@id" name="id" />

                <div class="mb-3">
                    <label for="nome" class="form-label">Funcionário</label>
                    <select for="tipo" class="form-control form-control-lg form-select" name="idFuncionario" required>
                        @foreach (var item in ViewBag.funcionarios)
                        {
                            <option value="@item.idFuncionario">@item.nome</option>
                        }
                    </select>
                    <span validation-for="tipo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="nome" class="form-label">Tipo funcionário</label>
                    <select for="tipo" class="form-control form-control-lg form-select" name="tipoFuncionario" required>
                        <option value=""></option>
                        @foreach (var item in ViewBag.tipoFuncionarios)
                        {
                            <option value="@item.TipoFuncionarioId">@item.tipo</option>
                        }
                    </select>
                    <span validation-for="tipo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="nome" class="form-label">Serviço</label>
                    <select for="tipo" class="form-control form-control-lg form-select" name="idServico" required>
                        <option value=""></option>
                        @foreach (var item in ViewBag.servicos)
                        {
                            <option value="@item.ServicoId">@item.servico</option>
                        }
                    </select>
                    <span validation-for="tipo" class="text-danger"></span>
                </div>

                <div class="mb-3" style="float:right;">
                    <input type="submit" value="Editar" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            </div>
        </div>
    </form>
</div>