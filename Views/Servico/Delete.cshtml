@model farmacia.Models.Servico

@{
    ViewData["Title"] = "Delete";
}


<div class="container" id="linkGen" style="margin-bottom:20px; margin-top:70px;">
    <p style="color:#212529; font-size: 20px;"><a asp-action="Index"
            style="text-decoration: none;color:#212529">Serviço/</a>remover</p>
</div>
<div class="container pt-3 pb-5" id="headCliente" style="box-shadow: 1px 5px 15px #888888; margin-top:0px">
    <h5>Remover serviço</h5>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.servico)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.servico)
            </dd>
        </dl>
        <form asp-action="Delete" style="float:right;">
            <input type="hidden" asp-for="ServicoId" />
            <input type="submit" value="Remover" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary ">Voltar</a>
        </form>
    </div>
</div>