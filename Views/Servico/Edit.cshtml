@model farmacia.Models.Servico

@{
    ViewData["Title"] = "Create";
}

<div class="container" id="linkGen" style="margin-bottom:20px; margin-top:70px;">
    <p style="color:#212529; font-size: 20px;"><a asp-action="Index"
            style="text-decoration: none;color:#212529">Serviço/</a>editar</p>
</div>

<div class="container pt-3 pb-3" id="headCliente" style="box-shadow: 1px 5px 15px #888888; margin-top:0px">
    <h5>Editar serviço</h5>
    <hr />
    <form method="post" action="Edit">
        <div class="row">
            <div class="col-md-12">
                <input type="hidden" asp-for="ServicoId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label for="nome" class="form-label">Tipo serviço</label>
                    <select for="tipo" class="form-control form-control-lg form-select" name="tipoServico" required>
                        <option value=""></option>
                        @foreach (var item in Model.tipoServicos)
                        {
                            <option value="@item.TipoServicoId">@item.tipo</option>
                        }
                    </select>
                    <span validation-for="tipo" class="text-danger"></span>
                </div>
                <div class="mb-12">
                    <label for="servico" class="form-label">Serviço</label>
                    <input asp-for="servico" class="form-control form-control-lg" id="servico" name="servico" required />
                    <span validation-for="servico" class="text-danger"></span>
                </div>
            </div>
        </div><br> 
        <div class="mb-3" style="float:right;">
            <input type="submit" value="Editar" class="btn btn-success btn-lg" />
            <a asp-action="Index" class="btn btn-secondary btn-lg">Voltar</a>
        </div><br> <br> 
    </form>
</div>